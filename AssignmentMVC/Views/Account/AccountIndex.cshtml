@{
    ViewData["Title"] = User.FindFirst("DisplayName")?.Value;
}

@using AssignmentMVC.Models.Identity
@model AssignmentMVC.Models.Identity.AppUser

<div class="profile-card d-flex justify-content-center align-items-center">
    <div class="container d-flex flex-column align-items-center">
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="..." alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@Model.FirstName</h5>
                <p class="card-text">@Model.LastName</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">@Model.PhoneNumber</li>
                <li class="list-group-item">@Model.CompanyName</li>
                <li class="list-group-item">@Model.UserName</li>
            </ul>
            <div class="card-body d-flex justify-content-center justify-content-between ">
                <a class="links" asp-controller="Home" asp-action="HomeIndex"><i class="fa-solid fa-house"></i></a>
                <a class="links" asp-controller="Contact" asp-action="ContactsIndex"><i class="fa-regular fa-message-middle"></i></a>
            </div>
        </div>
    </div>
</div>
