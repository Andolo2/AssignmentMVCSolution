@model ContactViewModel



<section class="banner">
    <img src="\images\placeholders\1920\pexels-gdtography-950241 (1).jpg" alt="banner">
    <div class="container">

        <h1>Contact</h1>
        <p>HOME. PRODUCT DETAILS<p>
    </div>
</section>
<!-- Banner END-->
<!--Contact form-->
<section class="contactform-section">
    <div class="container">
        <form class="contactform" method="post" novalidate >
            <div class="form">
                <div class="left">
                    <label for="name-input">Name</label>
                    <input type="text" id="name-input" name="name" required>
                    <span class="error-message"></span>

                    <label for="phone-input">Phone number</label>
                    <input type="tel" id="phone-input" name="phone" required>
                    <span class="error-message"></span>
                </div>
                <div class="right">
                    <label for="email-input">Email</label>
                    <input type="email" id="email-input" name="email" required>
                    <span class="error-message"></span>

                    <label for="company-input">Company</label>
                    <input type="text" id="company-input" name="company" required>
                    <span class="error-message"></span>
                </div>
            </div>
            <div class="comments">
                <label for="comment-input">Comment</label>
                <textarea id="comment-input" name="comment" required></textarea>
                <span class="error-message"></span>
                <div class="radio">
                    <input class="form-check-input" type="checkbox" id="save-info" name="save-info">
                    <label class="form-check-label" for="save-info">Save my name, email, and website in this browser for the next time I comment.</label>
                </div>
                <button type="submit" id="submit-button" >Submit</button>
            </div>
        </form>
    </div>
</section>



<!-- Contact form-->
