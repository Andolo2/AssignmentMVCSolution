@model UserRegisterViewModel

@{
    ViewData["Title"] = "Register your account";
}


<section class="Register-Account">
    <div class="container">
       
        <div asp-validation-summary="ModelOnly" class="error"></div>

        <form enctype="multipart/form-data" class="form-registration" method="post">

            <div class="left">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" id="register-firstname" />
                <span asp-validation-for="FirstName"></span>
                <span id="firstname-error-message" class="error-message"></span>

            </div>

            <div class="right">

                <label asp-for="LastName"></label>
                <input asp-for="LastName" id="register-lastname" />
                <span asp-validation-for="LastName"></span>
                <span id="lastname-error-message" class="error-message"></span>

            </div>

            <div class="wide">
                <label asp-for="StreetName"></label>
                <input asp-for="StreetName" id="register-streetname" />
                <span asp-validation-for="StreetName"></span>
                <span id="streetname-error-message" class="error-message"></span>
            </div>

            <div class="left">
                <label asp-for="PostalCode"></label>
                <input asp-for="PostalCode" id="register-postalcode" />
                <span asp-validation-for="PostalCode"></span>
                <span id="postalcode-error-message" class="error-message"></span>

                <label asp-for="Mobile"></label>
                <input asp-for="Mobile" id="register-mobile" />
                <span asp-validation-for="Mobile"></span>
                <span id="mobile-error-message" class="error-message"></span>

            </div>

            <div class="right">

                <label asp-for="City"></label>
                <input asp-for="City" id="register-city" />
                <span asp-validation-for="City"></span>
                <span id="city-error-message" class="error-message"></span>


                <label asp-for="Company"></label>
                <input asp-for="Company" id="register-company" />
                <span asp-validation-for="Company"></span>
                <span id="company-error-message" class="error-message"></span>

            </div>

            <div class="wide">
                <label asp-for="Email"></label>
                <input asp-for="Email" id="register-email" />
                <span asp-validation-for="Email"></span>
                <span id="email-error-message" class="error-message"></span>

                <label asp-for="Password"></label>
                <input asp-for="Password" id="register-password" />
                <span asp-validation-for="Password"></span>
                <span id="password-error-message" class="error-message"></span>

                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" id="register-confirm" />
                <span asp-validation-for="ConfirmPassword"></span>
                <span class="error-message"></span>

                <label asp-for="ImageFile"></label>
                <input type="file" asp-for="ImageFile" id="profilePicture" name="profilePicture">
                <span asp-validation-for="ImageFile"></span>
                <span class="error-message"></span>
            </div>


            <div class="submit-area">
                <div class="radio">

                    <input asp-for="TermsAndAgreement" class="form-check-input" type="checkbox"  id="flexCheckDefault">
                    <p>Save my name, email, and website in this browser for the next time I comment.</p>
                </div>
                <button type="submit" >Submit</button>
            </div>



        </form>
    </div>
</section>