@using AssignmentMVC.Services.ProductServices;



@inject ProductService ProductService

@{
    var products = ProductService.GetFeaturedProductsAsync().GetAwaiter().GetResult();
}
   <!-- Bottom portion, three cards START-->


<section class="top-selling">
    <div class="container">
        <div class="bc-grid">

            @foreach (var product in products)
            {



                <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="collection-item">
                    <img src="~/images/FromForm/@product.ImageUrl" alt="@product.Title" />
                    <div class="body">
                        <div class="info">
                            <div class="title">@product.Title</div>
                            <div class="price">$ @product.Price</div>

                        </div>
                        <i class="fa-sharp fa-regular fa-cart-plus fa-shake"></i>
                    </div>

                </a>

            }
        </div>

    </div>
    </div>
</section>
<!-- Bottom portion, three cards end-->