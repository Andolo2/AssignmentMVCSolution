
@inject UpToSaleService UpToSaleServices

@{
    var uptosale = UpToSaleServices.GetLatest();
}

<!--Up-To-Sale component START-->
<section class="up-to-sale">
    <div class="container">
        <div class="collection-grid">

            <div class="bc-grid">
                @foreach (var item in Model.GridItems)
                {
                    <partial name="/Views/Partials/Reusable/GridCollectionItem.cshtml" model="item" />
                }
            </div>

            <div class="collection-item collection-content">
                <div class="container">
                    <div class="title-red">@uptosale.RedTitle</div>
                    <div class="title">@uptosale.Title</div>
                    <div class="ingress">@uptosale.Ingress</div>
                    <div class="text">@uptosale.Text</div>
                    <a href="#" class="link">@uptosale.Link</a>
                </div>
            </div>

            <div class="bc-grid">
                @foreach (var item in Model.GridItems)
                {
                    <partial name="/Views/Partials/Reusable/GridCollectionItem.cshtml" model="item" />
                }
            </div>


        </div>
    </div>
</section>
