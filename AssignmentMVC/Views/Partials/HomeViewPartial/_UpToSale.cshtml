@using AssignmentMVC.Services.ProductServices;



@inject ProductService ProductService

@{
    var products = ProductService.GetTwoAsync().GetAwaiter().GetResult();
}


<!--Up-To-Sale component START-->
<section class="up-to-sale">
    <div class="container">
        <div class="collection-grid">

            <div class="bc-grid">
                @foreach (var product in products)
                {



                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="collection-item">
                        <img src="~/images/FromForm/@product.ImageUrl" alt="@product.Title" />
                        <div class="body">
                            <div class="info">
                                <div class="title">@product.Title</div>
                                <div class="price">$ @product.Price</div>

                            </div>
                            <i class="fa-sharp fa-regular fa-cart-plus fa-shake"></i>
                        </div>

                    </a>

                }
            </div>

            <div class="collection-item collection-content">
                <div class="container">
                    <div class="title-red">UP TO SELL</div>
                    <div class="title">50% OFF</div>
                    <div class="ingress">Get the Best Price</div>
                    <div class="text">Get the best daily offer et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren no sea taki</div>
                    <a href="#" class="link">Discover More</a>
                </div>
            </div>

            <div class="bc-grid">
                @foreach (var product in products)
                {



                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="collection-item">
                        <img src="~/images/FromForm/@product.ImageUrl" alt="@product.Title" />
                        <div class="body">
                            <div class="info">
                                <div class="title">@product.Title</div>
                                <div class="price">$ @product.Price</div>

                            </div>
                            <i class="fa-sharp fa-regular fa-cart-plus fa-shake"></i>
                        </div>

                    </a>

                }
            </div>


        </div>
    </div>
</section>
