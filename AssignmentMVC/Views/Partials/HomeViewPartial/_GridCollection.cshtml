


@inject ProductService ProductService

@{
    var products = ProductService.GetEightAsync().GetAwaiter().GetResult();
}




    <!--BestCollection component START-->
    <section class="best-collection">
        <div class="container">
            <div class="bc-top">
            <h2 class="bc-title">Best collection</h2>

            <ul>
                  <a class="bc-anks" href="#">All</a>
                <a class="bc-anks" href="#">Bags</a>
                <a class="bc-anks" href="#">Dress</a>
                <a class="bc-anks" href="#">Decoration</a>
                <a class="bc-anks" href="#">Essentials</a>
                <a class="bc-anks" href="#">Interior</a>
                <a class="bc-anks" href="#">Laptop</a>
                <a class="bc-anks" href="#">Mobile</a>
                <a class="bc-anks" href="#">Beuty</a>
        </ul>

            </div>


        @if (products != null)
        {
            <div class="bc-grid">
                @foreach (var product in products)
                {



                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="collection-item">
                        <img src="~/images/FromForm/@product.ImageUrl" alt="@product.Title" />
                        <div class="body">
                            <div class="info">
                                <div class="title">@product.Title</div>
                                <div class="price">$ @product.Price</div>

                            </div>
                            <i class="fa-sharp fa-regular fa-cart-plus fa-shake"></i>
                        </div>

                    </a>

                }
            </div>


        }

        </div>
    </section>
    <!-- BestCollection component END -->
}
