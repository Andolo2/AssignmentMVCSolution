@inject ProductService ProductService



@{
    var products = ProductService.GetFourAsync().GetAwaiter().GetResult();
}
@{
    var sixProducts = ProductService.GetSixAsync().GetAwaiter().GetResult();
}




<section class="product-detals-display">

    <div class="container">
        <h3>Related products</h3>
        <div class="bc-grid">
            @foreach (var product in products)
            {



                <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="collection-item">
                    <img src="~/images/FromForm/@product.ImageUrl" alt="@product.Title" />
                    <div class="body">
                        <div class="info">
                            <div class="title">@product.Title</div>
                            <div class="price">$ @product.Price</div>

                        </div>
                        <i class="fa-sharp fa-regular fa-cart-plus fa-shake"></i>
                    </div>

                </a>

            }
        </div>

        <div class="product-images">
            @foreach(var sixproducts in sixProducts)
            {
                 <a asp-controller="Product" asp-action="Details" asp-route-id="@sixproducts.Id" class="collection-item">
                    <img src="~/images/FromForm/@sixproducts.ImageUrl" alt="@sixproducts.Title" />
                 </a>
                
            
            }
         </div>
    </div>


</section>